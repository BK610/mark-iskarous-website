---
export const prerender = true;

const { location, title, target } = Astro.props;
const { pathname } = Astro.url;
---

<a
  class=`border border-b-neutral-900 rounded-sm
  ${pathname == location ? "bg-neutral-100 border-neutral-900 shadow-md" : "border-transparent"}`
  href={location}
  target={target}
>
  <div class="px-3 hover:opacity-70">
    {title}
  </div>
</a>
