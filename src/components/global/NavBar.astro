---
export const prerender = true;

import NavBarItem from "./NavBarItem.astro";
---

<nav class="py-4 px-4 relative">
  <!-- Overlay -->
  <div
    id="menu-overlay"
    class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden"
  >
  </div>
  <!-- Hamburger button for mobile -->
  <button
    id="menu-toggle"
    class="md:hidden float-right p-2 border bg-white border-neutral-400 rounded-md hover:bg-neutral-100 active:bg-neutral-200 relative z-50"
    aria-label="Toggle menu"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"
      >
      </path>
    </svg>
  </button>

  <!-- Navigation links -->
  <div id="menu-items" class="hidden md:block">
    <div
      class="flex md:justify-end flex-col md:flex-row items-center gap-4 mt-4 md:mt-0 fixed md:relative inset-x-0 top-16 md:top-0 bg-white z-50 py-4 md:py-0"
    >
      <NavBarItem location="/" title="Home" />
      <NavBarItem location="/research" title="Research" />
      <NavBarItem location="/teaching" title="Teaching" />
      <NavBarItem location="/publications" title="Publications" />
      <NavBarItem location="/cv.pdf" title="CV" target="_blank" />
    </div>
  </div>
</nav>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const menuItems = document.getElementById("menu-items");
  const menuOverlay = document.getElementById("menu-overlay");

  menuToggle?.addEventListener("click", () => {
    menuItems?.classList.toggle("hidden");
    menuOverlay?.classList.toggle("hidden");
    // Prevent body scrolling when menu is open
    document.body.classList.toggle("overflow-hidden");
  });

  menuOverlay?.addEventListener("click", () => {
    menuItems?.classList.add("hidden");
    menuOverlay?.classList.add("hidden");
    document.body.classList.remove("overflow-hidden");
  });
</script>
