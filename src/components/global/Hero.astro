---
export const prerender = true;

const { title, content } = Astro.props;

import { PortableText } from "astro-portabletext";
import Prose from "@/components/global/Prose.astro";
---

<div
  class="w-full rounded-md border border-neutral-400 py-2 px-4 lg:px-2 bg-gradient-to-br from-neutral-50 to-blue-50 shadow-xl"
>
  <div class="flex flex-col gap-4 max-w-3xl py-10 md:py-20 mx-auto">
    <h2 class="text-4xl font-semibold w-full text-center sm:text-left">
      {title}
    </h2>
    <Prose class="max-w-none">
      <PortableText value={content} />
    </Prose>
  </div>
</div>
