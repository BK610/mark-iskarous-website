---
const { title, description, image, id } = Astro.props;

import Card from "@/components/global/Card.astro";
---

<Card className="group overflow-hidden" clickable id={encodeURIComponent(id)}>
  <a href={`/research#${encodeURIComponent(id)}`}>
    <div
      class="p-2 border-b border-b-neutral-400 group-hover:border-b-neutral-800 transition-colors"
    >
      <h3
        class="h-[3em] text-xl font-serif font-semibold line-clamp-2 leading-normal text-center"
      >
        {title}
      </h3>
      <p class="h-[8.25em] leading-snug line-clamp-6 text-justify">
        {description}
      </p>
    </div>
    <div>
      <img
        class="object-cover w-full grayscale group-hover:grayscale-0"
        src={image}
        height="200"
        width="300"
        alt={`Representative image for the ${title} research topic`}
      />
    </div>
  </a>
</Card>
