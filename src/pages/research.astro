---
export const prerender = true;

import Layout from "@/layouts/Layout.astro";
import PageHeader from "@/components/global/PageHeader.astro";
import Hero from "@/components/global/Hero.astro";
import ResearchList from "@/components/pageContent/research/ResearchTopicList.astro";

import { sanityClient } from "sanity:client";
import type { SanityDocument } from "@sanity/client";

const researchPageContent: SanityDocument = await sanityClient.fetch(
  `*[_type == "researchPage"][0]
  {heroTitle, heroContent}`
);
---

<Layout>
  <PageHeader>Research</PageHeader>
  <Hero
    title={researchPageContent.heroTitle}
    content={researchPageContent.heroContent}
  />
  <ResearchList />
</Layout>
